{
  "name": "rkt-core",
  "author": "Eric J Hedman",
  "description": "Fant X server core",
  "license": "private",
  "version": "0.1.21",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "scripts": {
    "clean": "rm -rf ./lib && rm -rf node_modules && rm -rf yarn.lock && yarn install",
    "format": "prettier --write \"src/**/*.ts\"  \"tests/**/*.ts\" ",
    "prelint": "yarn run format",
    "lint": "eslint  ./src/**/*/*.ts",
    "pull": "yarn upgrade makers",
    "prebuild": "yarn run pull && yarn run lint",
    "build": "rm -rf ./lib && tsc",
    "test": "mocha  -r tests/bootstrap.js -r ts-node/register 'tests/**/*.spec.ts'",
    "pregitpush": "yarn run build",
    "gitpush": "git add . && git commit -m 'deploy for push' && git push origin master & exit 0",
    "version": "",
    "postversion": "git push --tags",
    "prepush": "yarn run gitpush",
    "push": "yarn version --patch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rktlabs/rkt-core"
  },
  "dependencies": {
    "@firebase/app-types": "^0.6.3",
    "@google-cloud/pubsub": "^2.5.0",
    "base64-js": "^1.5.1",
    "crypto-js": "^4.0.0",
    "dotenv": "^10.0.0",
    "firebase-admin": "^8.10.0",
    "hal-serializer": "git+ssh://git@github.com/rktlabs/hal-serializer.git",
    "jsonschema": "^1.2.10",
    "log4js": "^6.3.0",
    "luxon": "^1.25.0",
    "nanoid": "^3.1.12"
  },
  "laterDependencies": {
    "makers": "git+ssh://git@github.com/rktlabs/makers.git"
  },
  "devDependencies": {
    "@types/base64-js": "^1.3.0",
    "@types/chai": "^4.2.14",
    "@types/chai-as-promised": "^7.1.3",
    "@types/chai-subset": "^1.3.3",
    "@types/crypto-js": "^4.0.1",
    "@types/luxon": "^1.25.1",
    "@types/mocha": "^8.2.0",
    "@types/nanoid": "^2.1.0",
    "@types/sinon": "^9.0.10",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.13.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-subset": "^1.6.0",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.2.1",
    "mocha": "^8.1.3",
    "prettier": "^2.2.1",
    "sinon": "^9.2.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.2"
  },
  "private": true
}
